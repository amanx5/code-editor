{
	"name": "code-editor",
	"version": "0.1.0",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"import": "./src/index.ts",
			"types": "./src/index.ts"
		},
		"./css": "./dist/index.css",
		"./tailwind-preset": "./tailwind.preset.cjs"
	},
	"scripts": {
		"tw:build": "tailwindcss -i ./src/index.css -o ./dist/index.css",
		"tw:watch": "tailwindcss -i ./src/index.css -o ./dist/index.css --watch"
	},
	"peerDependencies": {
		"react": ">=19",
		"react-dom": ">=19"
	},
	"devDependencies": {
		"@types/react": ">=19",
		"@types/react-dom": ">=19",
		"autoprefixer": "workspace:*",
		"postcss": "workspace:*",
		"tailwindcss": "workspace:*"
	}
}