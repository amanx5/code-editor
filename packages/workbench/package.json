{
	"name": "code-workbench",
	"version": "0.1.0",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"import": "./src/index.ts",
			"types": "./src/index.ts"
		},
		"./css": "./dist/index.css",
		"./tailwind-config": "./tailwind.config.cjs"
	},
	"scripts": {
		"tw:build": "tailwindcss -i ./src/index.css -o ./dist/index.css",
		"tw:watch": "tailwindcss -i ./src/index.css -o ./dist/index.css --watch"
	},
	"dependencies": {
		"code-editor": "workspace:*"
	},
	"peerDependencies": {
		"react": ">=19",
		"react-dom": ">=19"
	},
	"devDependencies": {
		"@types/react": ">=19",
		"@types/react-dom": ">=19",
		"autoprefixer": "^10.4.23",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.19"
	}
}
